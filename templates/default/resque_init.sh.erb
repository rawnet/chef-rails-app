set -e

PID_PATH=<%= @environment_root %>/shared/pids

action="$1"
set -u

cd <%= @environment_root %>/current || exit 1

sig_worker () {
  workerpid=$PID_PATH/resque.$2.pid
  test -s "$workerpid" && kill -$1 `cat $workerpid`
}

start_worker() {
  <% setup_path = "PATH=/usr/local/bin:/home/#{@user}/.rbenv/shims:/home/#{@user}/.rbenv/bin:$PATH" %>
  queue="*"
  num=$1
  pidfile=resque.$num.pid
  logfile=resque_worker.$num.log
  nohup su -l <%= @user %> -c "cd <%= @environment_root %>/current && <%= setup_path %> RAILS_ENV=<%= @environment %> bundle exec rake environment resque:work QUEUE='$queue' VERBOSE=1 PIDFILE=tmp/pids/$pidfile >> log/$logfile 2>&1" >/dev/null 2>/dev/null &
}

stop_worker() {
  sig_worker QUIT $1 && rm $PID_PATH/resque.$1.pid
}

start_resque() {
  for num in {0..<%= (@resque_workers) - 1 %>}
  do
    start_worker $num
  done
}

stop_resque() {
  for num in {0..<%= (@resque_workers) - 1 %>}
  do
    stop_worker $num || true
  done
}

case $action in
  start)
    start_resque
    ;;
  start_worker)
    start_worker $2
    ;;
  restart)
    stop_resque
    start_resque
    ;;
  stop)
    stop_resque
    ;;
  stop_worker)
    stop_worker $2
    ;;
  *)
    echo >&2 "Usage: $0 <start|restart|stop>"
    exit 1
    ;;
esac

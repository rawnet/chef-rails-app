check process <%= @app_name %>_<%= @environment %>_redis with pidfile <%= @environment_root %>/shared/pids/redis.pid
  start program = "/etc/init.d/<%= @app_name %>_<%= @environment %>_redis start"
  stop program = "/etc/init.d/<%= @app_name %>_<%= @environment %>_redis stop"
  if 2 restarts within 3 cycles then timeout
  if totalmem > 100 Mb then alert
  if children > 255 for 5 cycles then stop
  if cpu usage > 95% for 3 cycles then restart
  if failed host 127.0.0.1 port <%= @port %> then restart
  if 5 restarts within 5 cycles then timeout
